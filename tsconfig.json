{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "moduleResolution": "node",
    "module": "es2022",
    "lib": ["es6", "dom"],
    "target": "ES6",
    "jsx": "react-jsx"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src", "src/**/*.ts"]
}
